{
    "client": {
      "basePath": "./",
      "build": {
        "root": "source",
        "scripts": [
          "{0}/**/*.js",
          "!{0}/*.js",
          "!{0}/components/**"
        ],
        "views": "/views/**/*.html",
        "styles": "/styles/**/*.scss",
        "images": "/images/**/*.{jpg,jpeg,png,gif}"
      },
      "deployment": {
        "root": "./dist/client",
        "scripts": "scripts",
        "views": "views",
        "styles": "css",
        "fonts": "fonts",
        "images": "images"
      }
    },
    "server": {
      "basePath": "./",
      "build": {
        "scripts": ["./source/**/*.js"]
      },
      "deployment": {
        "root": "dist/server",
        "scripts": ""
      }
    },
    "bower": "./bower.json",
    "bowerOverrides": {
        "font-awesome": {
          "main": [
            "./scss/font-awesome.scss",
            "./fonts/*"
          ]
        }
    }
}
