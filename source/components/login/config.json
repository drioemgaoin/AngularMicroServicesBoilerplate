{
  "client": {
    "componentRoot": "./source/components/login",
    "build": {
      "root": "./source/components/login/client",
      "scripts": [
        "./source/components/login/client/**/*.js",
        "!./source/components/login/client/app.js",
        "!./source/components/login/client/config.js"
      ],
      "views": "./source/components/login/client/**/*.html",
      "styles": "./source/components/login/client/**/*.scss",
      "images": "./source/components/login/client/**/*.{jpg,jpeg,png,gif}"
    },
    "deployment": {
      "root": "./dist/client",
      "scripts": "./dist/client/scripts",
      "views": "./dist/client/views/login",
      "styles": "./dist/client/css",
      "fonts": "./dist/client/fonts",
      "images": "./dist/client/images"
    },
    "bowerOverrides": {
      "font-awesome": {
        "main": [
          "./scss/font-awesome.scss",
          "./fonts/*"
        ]
      }
    }
  },
  "server": {
    "componentRoot": "./source/components/login",
    "build": {
      "root": "./source/components/login/server",
      "scripts": "./source/components/login/server/**/*.js"
    },
    "deployment": {
      "root": "./dist/server",
      "scripts": "./dist/server/scripts"
    }
  }
}
